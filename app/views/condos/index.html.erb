<h1>condos</h1>
<form method="get" action="/condos">
  <label for="search">Search for condos:</label>
  <input type="text" name="search" placeholder="Search By" />
  <input type="submit" value="Search" />
</form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Latittude</th>
      <th>Longitude</th>
      <th>City</th>
      <th>Zip code</th>
      <th>State</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @condos.each do |condo| %>
      <tr>
        <td><%= condo.name %></td>
        <td><%= condo.location %></td>
        <td><%= condo.latittude %></td>
        <td><%= condo.longitude %></td>
        <td><%= condo.city %></td>
        <td><%= condo.zip_code %></td>
        <td><%= condo.state %></td>
        <td><%= condo.country %></td>
        <td><%= condo.phone_number %></td>
        <td><%= condo.hours %></td>
        <td><%= link_to 'Show', condo %></td>
        <% if @ability.can? :manage, Condo %>
          <td><%= link_to 'Edit', edit_condo_path(condo) %></td>
          <td><%= link_to 'Destroy', condo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @ability.can? :manage, Condo %>
  <%= link_to 'New condo', new_condo_path %>
<% end %>
